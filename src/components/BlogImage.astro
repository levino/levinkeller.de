---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  src: ImageMetadata
  alt: string
  loading?: 'lazy' | 'eager'
  class?: string
}

const { src, alt, loading = 'lazy', class: className } = Astro.props
---

<Image
  src={src}
  alt={alt}
  loading={loading}
  widths={[480, 800, 1200]}
  sizes="(max-width: 800px) 100vw, 800px"
  class:list={['h-auto max-w-full', className]}
/>
