---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  src: ImageMetadata
  alt: string
  loading?: 'lazy' | 'eager'
  class?: string
  sizes?: string
  quality?: number
}

const {
  src,
  alt,
  loading = 'lazy',
  class: className,
  sizes = '(max-width: 800px) 100vw, 800px',
  quality = 85,
} = Astro.props
---

<Image
  src={src}
  alt={alt}
  loading={loading}
  widths={[480, 800, 1200]}
  sizes={sizes}
  quality={quality}
  class:list={['h-auto max-w-full rounded-md', className]}
/>
